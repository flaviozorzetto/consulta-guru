{{page-title 'Consultar dados de um CPF gratis'}}

<Header::Header
  @cpfType={{true}}
  @cpf={{this.cpf}}
  @date={{this.date}}
  @handleCpf={{this.handleCpf}}
  @handleDate={{this.handleDate}}
  @fetchCpf={{this.fetchCpf}}
  @errorState={{this.errorState}}
  @loadingState={{this.loadingFetch}}
/>

<main class='main-content'>

  {{#if this.showDefaultContent}}

    <DefaultContent::CpfGratis />

  {{else}}

    <DataContainer::CpfGratis::CpfGratis
      @loadingState={{this.loadingFetch}}
      @cpfData={{this.cpfData}}
      @limitReached={{this.limitReached}}
    />

  {{/if}}

</main>

<Footer::Footer />